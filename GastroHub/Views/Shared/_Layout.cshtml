<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GastroHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">GastroHub</a>

                <!-- Gumb za burger meni (sada će biti prikazan na svim uređajima) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Meni -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Privacy", "Home")">Privacy</a>
                        </li>
                    </ul>

                    <!-- Provjera prijavljenog korisnika -->
                    <div class="d-flex">
                        @if (Context.Session.GetString("User") != null)
                        {
                            <span class="navbar-text me-3">
                                <strong>@Context.Session.GetString("User")</strong> <!-- Prikazuje ime korisnika -->
                            </span>
                            <!-- Gumbi za osobne podatke, moje recepte i odjavu -->
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary ms-2">Osobni podaci</a>
                            <a href="@Url.Action("MyRecipes", "Account")" class="btn btn-outline-primary ms-2">Moji recepti</a>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-primary ms-2">Odjava</a>
                        }
                        else
                        {
                            <!-- Ako korisnik nije prijavljen, prikazujemo gumb za Login i Register -->
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary ms-2">Prijavi se</a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary ms-2">Registriraj se</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GastroHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript za Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- Provjerite ako zaista koristite jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Provjerite ako koristite jQuery ili samo Bootstrap 5 -->

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
