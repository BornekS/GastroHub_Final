@model List<GastroHub.Models.Recipe>

<h2>Moji recepti</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var recipe in Model)
        {
            <li>
                <a href="@Url.Action("RecipeDetails", "Account", new { id = recipe.Id })">@recipe.Name</a>
                | <a href="@Url.Action("EditRecipe", "Account", new { id = recipe.Id })">Uredi</a>
                | <a href="@Url.Action("Delete", "Account", new { id = recipe.Id })" onclick="return confirm('Jeste li sigurni da želite obrisati ovaj recept?');">Obriši</a>
            </li>
        }
    </ul>
}
else
{
    <p>Nemate još recepata.</p>
}

<a href="@Url.Action("CreateRecipe", "Account")" class="btn btn-primary">Dodaj novi recept</a>
