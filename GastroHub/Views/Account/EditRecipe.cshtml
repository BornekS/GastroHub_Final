@model GastroHub.Models.Recipe

<h2>Uredi recept: @Model.Name</h2>

<form method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Naziv recepta</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
    </div>

    <div class="mb-3">
        <label for="Ingredients" class="form-label">Sastojci</label>
        <textarea class="form-control" id="Ingredients" name="Ingredients" required>@Model.Ingredients</textarea>
    </div>

    <div class="mb-3">
        <label for="Instructions" class="form-label">Upute</label>
        <textarea class="form-control" id="Instructions" name="Instructions" required>@Model.Instructions</textarea>
    </div>

    <div class="mb-3">
        <label for="PreparationTime" class="form-label">Vrijeme slaganja (u minutama)</label>
        <input type="text" class="form-control" id="PreparationTime" name="PreparationTime" value="@Model.PreparationTime" required>
    </div>

    <button type="submit" class="btn btn-primary">Spremi recept</button>
</form>
